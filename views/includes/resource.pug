<div class="row">
    each resource in resources
        <div class="col-sm-6 mb-3">
            <div class="card">
                <div class="card-body">
                <a href='resources/#{resource.slug}'>
                    <h2 class="card-title"> #{resource.name} </h2>
                </a>
                <p class="card-text"> #{resource.description}</p>
                <a href= '#{resource.link}' class="btn btn-primary">Find Here</a>
                </div>
            </div>
        </div>
</div>